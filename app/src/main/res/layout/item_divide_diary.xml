<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:id="@+id/ll_divide"
    android:orientation="vertical"
    android:background="@drawable/category_item_bg"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_divide_mode_title"
            android:text="我是标题"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tv_divide_mode_delete"
            android:src="@drawable/delete"
            android:layout_toLeftOf="@+id/main_iv_edit"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/tv_divide_mode_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/edit"
            />
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_divide_mode_time"
        android:gravity="right"
        android:padding="12dp"
        android:text="2017年8月20日"
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_divide_mode_content"
        android:text="我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么我很开心，不知道为什么"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>