<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leo.diarynew.activity.LockActivity">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/iv_lock_state"
        android:src="@drawable/lock"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="90dp"
        android:layout_width="200dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/tv_lock_tip"
        android:layout_marginTop="220dp"
        android:text="当前日记有密码保护，您要修改密码？还是删除密码功能?修改密码请输入原始密码和新密码后点击确定修改密码按钮，删除密码功能直接点击删除密码功能按钮。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="280dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_lock_up"
                android:text="原密码: "
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/et_lock_up"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_lock_down"
                android:text="新密码: "
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/et_lock_down"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="18sp"
        android:text="确定修改密码"
        android:id="@+id/btn_lock_ok"
        android:background="@drawable/btn_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="460dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="删除密码功能"
        android:textSize="18sp"
        android:id="@+id/btn_lock_cancel"
        android:background="@drawable/btn_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
